        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn {
        border-radius: 4px;
    }

    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
