@model List<SAMLitigation.Models.Loan_NC_T_ProjectType>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Project Type Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Project Type Management</h2>
</div>

<!-- Project Types DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Project Types List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="projectTypesTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Project Type Name</th>
                        <th>Sector</th>
                        <th>Sector ID</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var projectType in Model)
                        {
                            <tr>
                                <td>@projectType.Id</td>
                                <td>@projectType.ProjectTypeName</td>
                                <td>@(projectType.Sector?.SectorName ?? "N/A")</td>
                                <td>@projectType.SectorId</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No project types found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            if (!$.fn.DataTable.isDataTable('#projectTypesTable')) {
                $('#projectTypesTable').DataTable({
                    "pageLength": 10,
                    "order": [[0, "asc"]],
                    "lengthChange": false,
                    "searching": true,
                    "language": {
                        "emptyTable": "No project types found",

                    }
                });
            }

            console.log('Project Types table initialized');

            // ViewBag data for reference (if needed for dropdowns elsewhere)
            var projectTypes = @Html.Raw(Json.Serialize(ViewBag.ProjectTypes));
            var sectors = @Html.Raw(Json.Serialize(ViewBag.Sectors));
            console.log('Loaded', projectTypes.length, 'project types and', sectors.length, 'sectors');
        });
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .btn {
        border-radius: 4px;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.95rem;
    }

    .table tbody td {
        vertical-align: middle;
    }
</style>