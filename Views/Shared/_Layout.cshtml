@using Microsoft.AspNetCore.Http
@using SAMLitigation.Services
@inject IHttpContextAccessor HttpContextAccessor
@inject DynamicMenuService DynamicMenuService
@{
    var username = HttpContextAccessor.HttpContext?.User?.Identity?.Name ?? "Guest";
    var userIdString = HttpContextAccessor.HttpContext?.Session.GetString("userId");
    decimal userId = 0;
    decimal.TryParse(userIdString, out userId);

    // Get user-specific menu based on their userId
    var menuData = userId > 0
        ? DynamicMenuService.GetUserMenuHierarchy(userId)
        : new SAMLitigation.Models.ViewModel.HierarchicalMenuViewModel();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAM Litigation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectProcessFlow.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-wrap: nowrap;
        }

        /* Sidebar styling */
        .sidebar {
            width: 280px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
            max-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ccc;
                padding: 0.5rem 1rem;
                border-radius: 0.25rem;
                transition: all 0.2s;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: white;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: white;
                }

            /* Nested menu styling */
            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

                .sidebar ul ul {
                    padding-left: 1rem;
                }

            .sidebar li {
                margin-bottom: 0.25rem;
            }

            /* Collapse arrow animation */
            .sidebar .nav-link i.bi-caret-down-fill {
                font-size: 0.8rem;
                transition: transform 0.2s;
            }

            .sidebar .nav-link[aria-expanded="true"] i.bi-caret-down-fill {
                transform: rotate(180deg);
            }

        /* Hide sidebar on small screens */
        @@media (max-width: 991.98px) {
            .sidebar

        {
            position: fixed;
            height: 100%;
            transform: translateX(-100%);
            z-index: 1050;
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 1040;
        }

            .overlay.active {
                display: block;
            }

        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            background-color: #f8f9fa;
            padding: 0.5rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .menu-toggle {
            border: none;
            background: none;
            font-size: 1.5rem;
            color: #343a40;
            display: none;
        }

        @@media (max-width: 991.98px) {
            .menu-toggle

        {
            display: block;
        }

        }

        /* Indentation for different levels */
        .sidebar li[data-level="2"] > a {
            padding-left: 1.5rem;
        }

        .sidebar li[data-level="3"] > a {
            padding-left: 2.5rem;
        }

        .sidebar li[data-level="4"] > a {
            padding-left: 3.5rem;
        }

        .sidebar li[data-level="5"] > a {
            padding-left: 4.5rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3" id="sidebar">
        <h4 class="text-white mb-4">SAM Menu</h4>

        <ul class="nav nav-pills flex-column mb-auto">
            <!-- Static Home Link -->
            <li>
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <span><i class="bi bi-house-door-fill me-2"></i> Home</span>
                </a>
            </li>

            <!-- Dynamic User-Specific Menu from Database -->
            @if (menuData.RootItems != null && menuData.RootItems.Any())
            {
                @await Html.PartialAsync("_MenuItemPartial", menuData.RootItems)
            }
            else
            {
                <li class="text-muted ms-3">No menu items available</li>
            }

            <!-- Static Logout -->
            <li class="mt-3">
                <form method="post" asp-controller="Login" asp-action="Logout">
                    <button type="submit" class="btn btn-link nav-link text-start w-100">
                        <span><i class="bi bi-box-arrow-right me-2"></i> Logout</span>
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <!-- Overlay for mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <button class="menu-toggle" id="menuToggle">
                <i class="bi bi-list"></i>
            </button>
            <span class="text-muted ms-auto">
                Logged in as: <strong>@username</strong>
                @if (userId > 0)
                {
                    <span class="badge bg-secondary">ID: @userId</span>
                }
            </span>
        </div>

        <main class="container-fluid mt-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-auto py-2 px-3">
            <div class="container">
                &copy; 2025 - SAM Litigation Application
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Mobile menu toggle
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const toggleButton = document.getElementById('menuToggle');

        if (toggleButton) {
            toggleButton.addEventListener('click', () => {
                sidebar.classList.toggle('active');
                overlay.classList.toggle('active');
            });
        }

        if (overlay) {
            overlay.addEventListener('click', () => {
                sidebar.classList.remove('active');
                overlay.classList.remove('active');
            });
        }

        // Highlight active menu item based on current URL
        $(document).ready(function () {
            var currentPath = window.location.pathname.toLowerCase();

            $('.sidebar .nav-link').each(function () {
                var href = $(this).attr('href');
                if (href && href !== '#' && currentPath.indexOf(href.toLowerCase()) !== -1) {
                    $(this).addClass('active');

                    // Expand parent collapses
                    $(this).parents('.collapse').each(function() {
                        $(this).addClass('show');
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>