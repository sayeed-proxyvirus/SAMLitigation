@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    // Fixed userId for testing - remove login dependency
    decimal userId = 4;
    var username = "Test User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SAM Litigation</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectProcessFlow.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-wrap: nowrap;
        }

        .sidebar {
            width: 280px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            transition: transform 0.3s ease-in-out;
            overflow-y: auto;
            max-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ccc;
                padding: 0.5rem 1rem;
                border-radius: 0.25rem;
                transition: all 0.2s;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: white;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                    color: white;
                }

            .sidebar ul {
                list-style: none;
                padding-left: 0;
            }

                .sidebar ul ul {
                    padding-left: 1rem;
                }

            .sidebar li {
                margin-bottom: 0.25rem;
            }

            .sidebar .nav-link i.bi-caret-down-fill {
                font-size: 0.8rem;
                transition: transform 0.2s;
            }

            .sidebar .nav-link[aria-expanded="true"] i.bi-caret-down-fill {
                transform: rotate(180deg);
            }

        @@media (max-width: 991.98px) {
            .sidebar

        {
            position: fixed;
            height: 100%;
            transform: translateX(-100%);
            z-index: 1050;
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 1040;
        }

            .overlay.active {
                display: block;
            }

        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            background-color: #f8f9fa;
            padding: 0.5rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .menu-toggle {
            border: none;
            background: none;
            font-size: 1.5rem;
            color: #343a40;
            display: none;
        }

        @@media (max-width: 991.98px) {
            .menu-toggle

        {
            display: block;
        }

        }

        .sidebar li[data-level="2"] > a {
            padding-left: 1.5rem;
        }

        .sidebar li[data-level="3"] > a {
            padding-left: 2.5rem;
        }

        .sidebar li[data-level="4"] > a {
            padding-left: 3.5rem;
        }

        .sidebar li[data-level="5"] > a {
            padding-left: 4.5rem;
        }

        #menuLoadingSpinner {
            text-align: center;
            padding: 1rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3" id="sidebar">
        <ul class="nav nav-pills flex-column mb-auto" id="dynamicMenuContainer">
            <!-- SAM Menu - Top Level Collapsible Parent -->
            <li>
                <a class="nav-link text-white fw-bold"
                   data-bs-toggle="collapse"
                   href="#samMenuCollapse"
                   role="button"
                   aria-expanded="false"
                   aria-controls="samMenuCollapse">
                    <span>
                        <i class="bi bi-grid-3x3-gap-fill me-2"></i>
                        SAM Menu
                    </span>
                    <i class="bi bi-caret-down-fill"></i>
                </a>

                <!-- SAM Menu Content -->
                <ul class="collapse show nav flex-column" id="samMenuCollapse">
                    <!-- Static Home Link -->
                    <li data-level="1">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span><i class="bi bi-house-door-fill me-2"></i> Home</span>
                        </a>
                    </li>

                    <!-- Loading Spinner -->
                    <li id="menuLoadingSpinner" data-level="1">
                        <div class="text-center py-2">
                            <div class="spinner-border spinner-border-sm text-light" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <span class="text-light ms-2">Loading menu...</span>
                        </div>
                    </li>

                    <!-- Dynamic Menu Container - Will be populated via AJAX -->
                    <div id="dynamicMenuItems"></div>
                </ul>
            </li>

            <!-- Static Logout - Outside SAM Menu -->
            <li class="mt-3">
                <form method="post" asp-controller="Login" asp-action="Logout">
                    <button type="submit" class="btn btn-link nav-link text-start w-100 text-white">
                        <span><i class="bi bi-box-arrow-right me-2"></i> Logout</span>
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <!-- Overlay for mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <button class="menu-toggle" id="menuToggle">
                <i class="bi bi-list"></i>
            </button>
            <span class="text-muted ms-auto">
                Test Mode - <strong>@username</strong>
                <span class="badge bg-secondary">ID: @userId</span>
            </span>
        </div>

        <main class="container-fluid mt-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-auto py-2 px-3">
            <div class="container">
                &copy; 2025 - SAM Litigation Application
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        var currentUserId = 4; // Fixed for testing

        // Load dynamic menu on page load
        $(document).ready(function () {
            console.log('Loading menu for fixed userId:', currentUserId);
            loadDynamicMenu(currentUserId);

            // Mobile menu toggle
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');
            const toggleButton = document.getElementById('menuToggle');

            if (toggleButton) {
                toggleButton.addEventListener('click', () => {
                    sidebar.classList.toggle('active');
                    overlay.classList.toggle('active');
                });
            }

            if (overlay) {
                overlay.addEventListener('click', () => {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                });
            }

            // Highlight active menu item
            highlightActiveMenu();
        });

        function loadDynamicMenu(userId) {
            console.log('Loading menu for user:', userId);

            $.ajax({
                url: '@Url.Action("GetMenuHtml", "DynamicMenu")',
                type: 'GET',
                data: { userId: userId },
                success: function (html) {
                    console.log('✅ Menu loaded successfully');
                    console.log('HTML Length:', html.length);
                    $('#menuLoadingSpinner').hide();
                    $('#dynamicMenuItems').html(html);
                    highlightActiveMenu();

                    // Log menu structure
                    console.log('Menu items count:', $('#dynamicMenuItems li').length);
                },
                error: function (xhr, status, error) {
                    console.error('❌ Error loading menu:', error);
                    console.error('Status:', status);
                    console.error('Response:', xhr.responseText);
                    $('#menuLoadingSpinner').html(
                        '<li class="text-danger ms-3">' +
                        '<i class="bi bi-exclamation-triangle me-2"></i>' +
                        'Error loading menu: ' + error +
                        '</li>'
                    );
                }
            });
        }

        function highlightActiveMenu() {
            var currentPath = window.location.pathname.toLowerCase();

            $('.sidebar .nav-link').each(function () {
                var href = $(this).attr('href');
                if (href && href !== '#' && currentPath.indexOf(href.toLowerCase()) !== -1) {
                    $(this).addClass('active');

                    // Expand parent collapses including SAM Menu
                    $(this).parents('.collapse').each(function () {
                        $(this).addClass('show');
                    });

                    // Ensure SAM Menu is expanded if any child is active
                    $('#samMenuCollapse').addClass('show');
                }
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>