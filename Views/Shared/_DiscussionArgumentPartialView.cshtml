@model SAMLitigation.Models.ViewModel.SAM_Litigation_DetailsViewModel

<div class="discussion-card mb-3">
    <div class="card shadow-sm border-success">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <div>
                <span class="badge badge-light mr-2" style="font-size:1em">Discussion/Argument</span>
                <strong style="font-size:2em">@Model.CaseNumber</strong>
            </div>
            <div class="discussion-date">
                <i class="fas fa-calendar-alt"></i>
                @Model.ActionTakenDate.ToString("dd-MMM-yyyy")
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="info-item">
                        <label class="info-label">
                            <i class="fas fa-landmark text-success"></i> Court Name
                        </label>
                        <div class="info-value">@Model.CourtName</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="info-item">
                        <label class="info-label">
                            <i class="fas fa-user-tie text-success"></i> Lawyer Name
                        </label>
                        <div class="info-value">@Model.LawyerName</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="info-item">
                        <label class="info-label">
                            <i class="fas fa-comment-dots"></i> Prior Comments
                        </label>
                        <div class="info-value text-muted">
                            @(string.IsNullOrEmpty(Model.CommentsPriorAction) ? "N/A" : Model.CommentsPriorAction)
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="info-item">
                        <label class="info-label">
                            <i class="fas fa-comment"></i> Post Comments
                        </label>
                        <div class="info-value text-muted">
                            @(string.IsNullOrEmpty(Model.CommentsPostAction) ? "N/A" : Model.CommentsPostAction)
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-12">
                    <div class="action-buttons-div d-flex gap-2">
                        <button type="button"
                                class="btn btn-warning flex-fill"
                                onclick="handleEditDetail(@Model.LitigationDetailID)"
                                title="Edit this discussion detail">
                            <i class="fas fa-edit"></i> Edit
                        </button>
                        <button type="button"
                                class="btn btn-info flex-fill"
                                onclick="viewDocument(@Model.LitigationDetailID)"
                                title="View/Add documents for this discussion">
                            <i class="fas fa-file-alt"></i> Documents
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .discussion-card {
        transition: all 0.3s ease;
    }

        .discussion-card:hover {
            transform: translateY(-3px);
        }

        .discussion-card .card {
            border-left: 5px solid #4caf50;
        }

        .discussion-card .card-header {
            background-color: #4caf50 !important;
            font-weight: 600;
            padding: 0.75rem 1rem;
        }

    .discussion-date {
        font-weight: 500;
    }

    .info-item {
        margin-bottom: 0.5rem;
    }

    .info-label {
        font-weight: 600;
        font-size: 0.875rem;
        color: #495057;
        margin-bottom: 0.25rem;
        display: block;
    }

        .info-label i {
            margin-right: 5px;
        }

    .info-value {
        font-size: 0.95rem;
        color: #212529;
        padding: 0.5rem;
        background-color: #f8f9fa;
        border-radius: 4px;
        min-height: 38px;
    }

    .action-buttons-div {
        padding-top: 0.5rem;
        border-top: 1px solid #dee2e6;
    }

        .action-buttons-div .btn {
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
        }

            .action-buttons-div .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        .action-buttons-div .btn-warning {
            background-color: #eadaa0;
            border-color: #eadaa0;
            color: #333;
        }

            .action-buttons-div .btn-warning:hover {
                background-color: #eadaa0;
                border-color: #eadaa0;
                color: #000;
            }

        .action-buttons-div .btn-info {
            background-color: #a3b7ca;
            border-color: #a3b7ca;
            color: #fff;
        }

            .action-buttons-div .btn-info:hover {
                background-color: #a3b7ca;
                border-color: #a3b7ca;
            }

    /* Gap utility for older Bootstrap versions */
    .gap-2 {
        gap: 0.5rem;
    }

    /* Flex-fill for older Bootstrap versions */
    .flex-fill {
        flex: 1 1 auto;
    }
</style>