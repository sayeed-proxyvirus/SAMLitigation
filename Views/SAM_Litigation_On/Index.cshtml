@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Litigation On Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Litigation On Management</h2>
</div>

<!-- Litigation On DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Litigation On List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="litigationOnTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Litigation On Type Name</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated via JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Load litigation on data on page load
            loadLitigationOn();
        });

        // Load litigation on data from ViewBag
        function loadLitigationOn() {
            var litigationOns = @Html.Raw(Json.Serialize(ViewBag.Ons));
            console.log('Loaded', litigationOns.length, 'litigation on records');
            populateLitigationOnTable(litigationOns);
        }

        // Populate litigation on table
        function populateLitigationOnTable(litigationOns) {
            console.log('Populating table with', litigationOns.length, 'records');
            var tbody = $('#litigationOnTable tbody');
            tbody.empty();

            if (litigationOns.length === 0) {
                tbody.append('<tr><td colspan="2" class="text-center text-muted">No litigation on records found</td></tr>');
                return;
            }

            $.each(litigationOns, function(index, item) {
                var row = `
                    <tr>
                        <td>${item.value || 'N/A'}</td>
                        <td>${item.text || 'N/A'}</td>
                    </tr>
                `;
                tbody.append(row);
            });

            console.log('Table populated successfully');

            // Initialize or reinitialize DataTable
            if ($.fn.DataTable.isDataTable('#litigationOnTable')) {
                $('#litigationOnTable').DataTable().destroy();
            }
            
        }
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .btn {
        border-radius: 4px;
    }
</style>