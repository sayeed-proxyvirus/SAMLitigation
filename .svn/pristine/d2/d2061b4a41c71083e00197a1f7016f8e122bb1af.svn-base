@model SAMLitigation.Models.ViewModel.SAM_Litigation_DetailsViewModel
@{
    var userRoleId = ViewBag.UserRoleId ?? 0;

    // Status determination based on MakerUserID and CheckerUserID
    var hasMaker = Model.MakerUserID.HasValue && Model.MakerUserID.Value > 0;
    var hasChecker = Model.CheckerUserID.HasValue && Model.CheckerUserID.Value > 0;

    // Determine status
    var isVerified = hasMaker && hasChecker;
    var isPending = hasMaker && !hasChecker; 

    // User roles
    var isMaker = userRoleId == 0;
    var isChecker = userRoleId == 1;

    // Computed status string
    var statusText = isVerified ? "Verified" : (isPending ? "PendingVerification" : "Draft");
}
<div class="reported-bb-card mb-3">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <div>
                <span class="badge badge-light mr-2" style="font-size:1em">Reported to Bangladesh Bank</span>
                <strong style="font-size:1.2em">@Model.CaseNumber</strong>
                @* Status Badge based on MakerUserID and CheckerUserID *@
                @if (isPending)
                {
                    <span class="badge badge-warning status-badge ml-2" title="Waiting for checker verification">
                        <i class="fas fa-clock"></i> Pending Verification
                    </span>
                }
                else if (isVerified)
                {
                    <span class="badge badge-success status-badge ml-2" title="Verified by checker">
                        <i class="fas fa-check-circle"></i> Verified
                    </span>
                }
            </div>
            <div class="reported-date">
                <i class="fas fa-calendar-alt"></i>
                @Model.ActionTakenDate.ToString("dd-MMM-yyyy")
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-10">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-landmark text-primary"></i> Reporting Date
                                </label>
                                <div class="info-value">@Model.ActionTakenDate.ToString("dd-MMM-yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-landmark text-primary"></i> Report Number:
                                </label>
                                <div class="info-value">@Model.CaseNumber</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-landmark text-primary"></i> Lawyer:
                                </label>
                                <div class="info-value">@Model.LawyerName</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-landmark text-primary"></i> Location:
                                </label>
                                <div class="info-value">@Model.CourtName</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="info-item">
                                <label class="info-label">
                                    <i class="fas fa-landmark text-primary"></i> IDCOL Comments:
                                </label>
                                <div class="info-value">@Model.CommentsPostAction</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="row">
                        @if ((isMaker || isChecker) && !hasChecker)
                        {
                            <button type="button"
                                    class="btn btn-warning flex-fill"
                                    style="margin-top: 20pt; margin-right: 5pt; background-color: #eadaa0; border-color: #eadaa0;"
                                    onclick="handleEditDetail(@Model.LitigationDetailID)"
                                    title="Edit this suit filing detail">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                        }


                        @if (isChecker && hasMaker && !hasChecker)
                        {
                            <button type="button"
                                    class="btn btn-success flex-fill"
                                    style="margin-top: 20pt; margin-right: 5pt; background-color: #28a745; border-color: #28a745; color: #fff;"
                                    onclick="handleVerifyDetail(@Model.LitigationDetailID)"
                                    title="Verify this suit filing detail">
                                <i class="fas fa-check"></i> Verify
                            </button>
                        }

                        @* Documents Button - Always visible *@
                        <button type="button"
                                class="btn btn-info flex-fill"
                                style="margin-top: 10pt; margin-right: 5pt; background-color: #a3b7ca; border-color: #a3b7ca;"
                                onclick="viewDocument(@Model.LitigationDetailID)"
                                title="View/Add documents for this suit filing">
                            <i class="fas fa-file-alt"></i> Documents
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .reported-bb-card {
        transition: all 0.3s ease;
    }

        .reported-bb-card:hover {
            transform: translateY(-3px);
        }

        .reported-bb-card .card {
            border-left: 5px solid #79021c;
        }

        .reported-bb-card .card-header {
            background-color: #79021c !important;
            font-weight: 600;
            padding: 0.5rem 1rem;
        }

    .reported-date {
        font-weight: 500;
    }

    .info-item {
        margin-bottom: 0.5rem;
    }

    .info-label {
        font-weight: 600;
        font-size: 0.875rem;
        color: #495057;
        margin-bottom: 0.25rem;
        display: block;
    }

        .info-label i {
            margin-right: 5px;
        }

    .info-value {
        font-size: 0.95rem;
        color: #212529;
        padding: 0.4rem 0.5rem;
        background-color: #f8f9fa;
        border-radius: 4px;
        min-height: 34px;
    }
    /* Status Badge Styles */
    .status-badge {
        font-size: 0.85em;
        padding: 0.35em 0.65em;
        font-weight: 600;
        animation: fadeIn 0.3s ease-in;
    }

    .badge-warning {
        background-color: #ffc107 !important;
        color: #000 !important;
    }

    .badge-success {
        background-color: #28a745 !important;
        color: #fff !important;
    }
    .action-buttons-div {
        padding-top: 0.25rem;
    }

        .action-buttons-div .btn {
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
        }

            .action-buttons-div .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
            }

        .action-buttons-div .btn-warning {
            background-color: #ab5852;
            border-color: #ab5852;
            color: #333;
        }

            .action-buttons-div .btn-warning:hover {
                background-color: #ab5852;
                border-color: #ab5852;
                color: #000;
            }

        .action-buttons-div .btn-info {
            background-color: #a3b7ca;
            border-color: #a3b7ca;
            color: #fff;
        }

            .action-buttons-div .btn-info:hover {
                background-color: #a3b7ca;
                border-color: #a3b7ca;
            }

    /* Gap utility for older Bootstrap versions */
    .gap-2 {
        gap: 0.5rem;
    }

    /* Flex-fill for older Bootstrap versions */
    .flex-fill {
        flex: 1 1 auto;
    }
</style>