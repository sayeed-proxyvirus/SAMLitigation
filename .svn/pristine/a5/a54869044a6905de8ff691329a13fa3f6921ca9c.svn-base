using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.Rendering;
using Microsoft.EntityFrameworkCore;
using SAMLitigation.Models;
using SAMLitigation.Models.ViewModel;
using SAMLitigation.Services;

namespace SAMLitigation.Controllers
{
    public class SAM_Litigation_MasterController : Controller
    {
        private  LitigationMasterService _litigationMasterService;
        private TypeService _typeService;
        private CauseService _causeService;
        private StatusService _statusService;
        private LoanProjectService _loanProjectService;
        private LitigationPartyService _litigationPartyService;

       

        public SAM_Litigation_MasterController(LitigationMasterService litigationMasterService, TypeService typeService, CauseService causeService, StatusService statusService, LoanProjectService loanProjectService, LitigationPartyService litigationPartyService)
        {
            _litigationMasterService = litigationMasterService;
            _typeService = typeService;
            _causeService = causeService;
            _statusService = statusService;
            _loanProjectService = loanProjectService;
            _litigationPartyService = litigationPartyService;
        }

        public IActionResult Index()
        {
            try 
            {

                LoadDropdowns();

                ViewBag.LitigationList = _litigationMasterService.GetAllEx();


                return View();
            }
            catch 
            {
                throw;
            }
        }
        [HttpGet]
        public IActionResult GetAll() 
        {
            try
            {
                ViewBag.LitigationList = _litigationMasterService.GetAll();
                return View();
            }
            catch 
            {

                throw;
            }
        }
        // Add these methods to your SAM_Litigation_MasterController class

        [HttpGet]
        public IActionResult FilterByStatus(string statusName)
        {
            try
            {
                LoadDropdowns();

                var filteredCases = _litigationMasterService.GetAllEx()
                    .Where(c => c.LitigationStatusName == statusName)
                    .ToList();

                ViewBag.LitigationList = filteredCases;
                ViewBag.FilterType = statusName == "Live" ? "Pending Cases" : "Completed Cases";
                ViewBag.StatusFilter = statusName;

                return View("Index");
            }
            catch
            {
                throw;
            }
        }

        [HttpGet]
        public IActionResult FilterByPartyType(bool isAgainst)
        {
            try
            {
                LoadDropdowns();
                var filteredCases = _litigationMasterService.GetAllEx()
                    .Where(c => c.IsAgainstIDCOL == isAgainst)
                    .ToList();
                ViewBag.LitigationList = filteredCases;
                ViewBag.FilterType = !isAgainst ? "Complainant Cases" : "Defendant Cases";

                return View("Index");
            }
            catch
            {
                throw;
            }
        }
        [HttpPost]
        public IActionResult Index(SAM_Litigation_Master model) 
        {
            try 
            {
                if (ModelState.IsValid) 
                {
                    model.CreatedOn = DateTime.Now;
                    model.CreatedBy= User.Identity?.Name ?? "System";
                    _litigationMasterService.AddLitigationMaster(model);
                    return RedirectToAction("Index");
                   
                }
                LoadDropdowns();
                ViewBag.LitigationList = _litigationMasterService.GetAllEx();
                return View(model);
            }
            catch
            {
                throw;
            }
        }

        private void LoadDropdowns()
        {
            List<LoanNCPaperProcessingProjectViewModel> ProjectList = _loanProjectService.GetALl();
            ViewBag.ProjectList = new SelectList(ProjectList, "ProjectID", "StatementName");
            ViewBag.LitigationTypeList = new SelectList(_typeService.GetTypesALL(), "LitigationTypeID", "LitigationTypeName");
            ViewBag.StatusList = new SelectList(_statusService.GetStatusALL(), "LitigationStatusId", "LitigationStatusName");
            ViewBag.CauseList = new SelectList(_causeService.GetCauses(), "LitigationCauseID", "CauseName");
            ViewBag.PartyList = new SelectList(_litigationPartyService.GetPartyAllEX(), "LitigationPartyID", "LitigationParty");
        }

        // GET: Get Litigation by ID for editing
        public IActionResult GetByIdForUpdate(decimal id)
        {
            try
            {
                var litigation = _litigationMasterService.GetByIdForUpdate(id);

                if (litigation == null)
                {
                    return Json(new { success = false, message = "Litigation not found" });
                }

                // Return the litigation object as JSON
                return Json(new
                {
                    success = true,
                    litigationID = litigation.LitigationID,
                    projectID = litigation.ProjectID,
                    litigationTypeID = litigation.LitigationTypeID,
                    litigationStatusId = litigation.LitigationStatusId,
                    litigationCauseID = litigation.LitigationCauseID,
                    complainantLitigationPartyID = litigation.ComplainantLitigationPartyID,
                    defendentLitigationPartyID = litigation.DefendentLitigationPartyID,
                    initialCaseNumber = litigation.InitialCaseNumber,
                    isAgainstIDCOL = litigation.IsAgainstIDCOL
                });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = ex.Message });
            }

        }
        [HttpPost]
        public IActionResult UpdateLitigation(SAM_Litigation_Master model)
        {
            try
            {
                if (!ModelState.IsValid)
                {
                    return Json(new { success = false, message = "Invalid data" });
                }

                model.CreatedBy = "System";////Login Value
                model.CreatedOn = DateTime.Now;
                _litigationMasterService.UpdateLitigationMaster(model);

                return Json(new { success = true, message = "Litigation updated successfully" });
            }
            catch (Exception ex)
            {
                return Json(new { success = false, message = ex.Message });
            }
        }

    }
}
