@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Sector Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Sector Management</h2>
</div>

<!-- Sectors DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Sectors List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="sectorsTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Sector Name</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated via JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Load sectors on page load
            loadSectors();
        });

        // Load sectors from ViewBag
        function loadSectors() {
            var sectors = @Html.Raw(Json.Serialize(ViewBag.Sectors));
            console.log('Loaded', sectors.length, 'sectors');
            populateSectorTable(sectors);
        }

        // Populate sector table
        function populateSectorTable(sectors) {
            console.log('Populating table with', sectors.length, 'sectors');
            var tbody = $('#sectorsTable tbody');
            tbody.empty();

            if (sectors.length === 0) {
                tbody.append('<tr><td colspan="2" class="text-center text-muted">No sectors found</td></tr>');
                return;
            }

            $.each(sectors, function(index, sector) {
                var row = `
                    <tr>
                        <td>${sector.value || 'N/A'}</td>
                        <td>${sector.text || 'N/A'}</td>
                    </tr>
                `;
                tbody.append(row);
            });

            console.log('Table populated successfully');

            // Initialize or reinitialize DataTable
            if ($.fn.DataTable.isDataTable('#sectorsTable')) {
                $('#sectorsTable').DataTable().destroy();
            }
            $('#sectorsTable').DataTable({
                "pageLength": 10,
                "order": [[0, "desc"]],
                "searching": false,
                "lengthChange": false,
                "language": {
                    "emptyTable": "No sectors found"
                }
            });
        }
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .btn {
        border-radius: 4px;
    }
</style>