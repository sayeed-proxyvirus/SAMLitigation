@model List<SAMLitigation.Models.SAM_Litigation_Action>

@{
    ViewData["Title"] = "Action Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Action Management</h2>
</div>

<!-- Add Action Card Form -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add New Action</h5>
    </div>
    <div class="card-body">
        <form id="addActionForm">
            <div class="row g-3">
                <!-- Action Name -->
                <div class="col-md-8">
                    <label for="ActionName" class="form-label">Action Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="ActionName" name="ActionName" required>
                </div>

                <!-- Form Buttons -->
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-2"></i>Save Action
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Actions DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Actions List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="actionsTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Action Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- DataTable will populate this -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit Action Modal -->
<div class="modal fade" id="editActionModal" tabindex="-1" aria-labelledby="editActionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editActionModalLabel">
                    <i class="fas fa-edit me-2"></i>Edit Action
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editActionForm">
                    <input type="hidden" id="editActionId" name="ActionId">
                    <div class="mb-3">
                        <label for="editActionName" class="form-label">Action Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editActionName" name="ActionName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-warning" id="updateActionBtn">
                    <i class="fas fa-save me-2"></i>Update Action
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Global DataTable variable
        var actionsTable;

        $(document).ready(function () {
            // Initialize functions
            initializeDataTable();
            setupEventHandlers();
        });

        // Initialize DataTable with client-side data from Model
        function initializeDataTable() {
            // Prepare data from server model with proper serialization options
            var actionData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model ?? new List<SAM_Litigation_Action>(),
                            new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase }));

        console.log('Action Data:', actionData); // Debug

            actionsTable = $('#actionsTable').DataTable({
                "data": actionData,
                "columns": [
                    {
                        "data": "litigationActionID", // camelCase after serialization
                        "title": "ID"
                    },
                    {
                        "data": "litigationActionName", // camelCase after serialization
                        "title": "Action Name"
                    },
                    {
                        "data": null,
                        "title": "Actions",
                        "orderable": false,
                        "render": function (data, type, row) {
                            return '<button class="btn btn-sm btn-warning edit-action-btn" ' +
                                   'data-action-id="' + row.litigationActionID + '" ' +
                                   'data-action-name="' + escapeHtml(row.litigationActionName) + '" ' +
                                   'title="Edit Action">' +
                                   '<i class="fas fa-edit"></i> Edit' +
                                   '</button>';
                        }
                    }
                ],
                "pageLength": 10,
                "order": [[0, "desc"]],
                "searching": true,
                "lengthChange": false,
                "language": {
                    "emptyTable": "No actions found",
                    "processing": "Loading data..."
                }
            });
        }

        // Setup all event handlers
        function setupEventHandlers() {
            // Add action form submission
            $('#addActionForm').on('submit', handleAddAction);

            // Edit button click - using event delegation
            $(document).on('click', '.edit-action-btn', handleEditButtonClick);

            // Update action button click
            $('#updateActionBtn').on('click', handleUpdateAction);
        }

        // Handle add action form submission
        function handleAddAction(e) {
            e.preventDefault();

            var actionName = $('#ActionName').val().trim();

            if (!actionName) {
                alert('Please enter action name');
                return;
            }

            $.ajax({
                url: '@Url.Action("AddAction", "SAM_Litigation_Action")',
                type: 'POST',
                data: { actionName: actionName },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        $('#addActionForm')[0].reset();
                        reloadPage();
                    } else {
                        alert(response.message || 'Failed to add action');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error adding action:', error);
                    alert('Error adding action: ' + error);
                }
            });
        }

        // Handle edit button click - opens modal
        function handleEditButtonClick() {
            var actionId = $(this).data('action-id');
            var actionName = $(this).data('action-name');

            console.log('Edit clicked - ID:', actionId, 'Name:', actionName);

            $('#editActionId').val(actionId);
            $('#editActionName').val(actionName);

            // Open modal using Bootstrap 5 method
            var editModal = new bootstrap.Modal(document.getElementById('editActionModal'));
            editModal.show();
        }

        // Handle update action
        function handleUpdateAction() {
            var actionId = $('#editActionId').val();
            var actionName = $('#editActionName').val().trim();

            if (!actionName) {
                alert('Please enter action name');
                return;
            }

            $.ajax({
                url: '@Url.Action("UpdateAction", "SAM_Litigation_Action")',
                type: 'POST',
                data: {
                    actionId: actionId,
                    actionName: actionName
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);

                        // Hide modal
                        var editModal = bootstrap.Modal.getInstance(document.getElementById('editActionModal'));
                        editModal.hide();

                        reloadPage();
                    } else {
                        alert(response.message || 'Failed to update action');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error updating action:', error);
                    alert('Error updating action: ' + error);
                }
            });
        }

        // Reload page to get fresh data
        function reloadPage() {
            location.reload();
        }

        // Escape HTML to prevent XSS
        function escapeHtml(text) {
            var map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn {
        border-radius: 4px;
    }

    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .edit-action-btn {
        cursor: pointer;
    }
</style>