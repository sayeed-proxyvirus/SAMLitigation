@model SAMLitigation.Models.SAM_Litigation_Master
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Litigation Entry Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Litigation Entry</h2>
</div>

<!-- Add Lawyer Card Form -->
<!-- Litigation Entry Form -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-file-earmark-plus me-2"></i>Add New Litigation</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" asp-controller="SAM_Litigation_Master" method="post">
            <div class="row g-3">

                <!-- Project -->
                <div class="col-md-6">
                    <label class="form-label">Project <span class="text-danger">*</span></label>
                    <select asp-for="ProjectID" class="form-select" asp-items="ViewBag.ProjectList" required>
                        <option value="">-- Select Project --</option>
                    </select>
                </div>

                <!-- Litigation Type -->
                <div class="col-md-6">
                    <label class="form-label">Litigation Type <span class="text-danger">*</span></label>
                    <select asp-for="LitigationTypeID" class="form-select" asp-items="ViewBag.LitigationTypeList" required>
                        <option value="">-- Select Type --</option>
                    </select>
                </div>

                <!-- Status -->
                <div class="col-md-6">
                    <label class="form-label">Status <span class="text-danger">*</span></label>
                    <select asp-for="LitigationStatusId" class="form-select" asp-items="ViewBag.StatusList" required>
                        <option value="">-- Select Status --</option>
                    </select>
                </div>

                <!-- Cause -->
                <div class="col-md-6">
                    <label class="form-label">Litigation Cause <span class="text-danger">*</span></label>
                    <select asp-for="LitigationCauseID" class="form-select" asp-items="ViewBag.CauseList" required>
                        <option value="">-- Select Cause --</option>
                    </select>
                </div>

                <!-- Complainant -->
                <div class="col-md-6">
                    <label class="form-label">Complainant <span class="text-danger">*</span></label>
                    <select asp-for="ComplainantLitigationPartyID" class="form-select" asp-items="ViewBag.PartyList" required>
                        <option value="">-- Select Complainant --</option>
                    </select>
                </div>

                <!-- Defendant -->
                <div class="col-md-6">
                    <label class="form-label">Defendant <span class="text-danger">*</span></label>
                    <select asp-for="DefendentLitigationPartyID" class="form-select" asp-items="ViewBag.PartyList" required>
                        <option value="">-- Select Defendant --</option>
                    </select>
                </div>

                <!-- Case Number -->
                <div class="col-md-6">
                    <label class="form-label">Initial Case Number</label>
                    <input asp-for="InitialCaseNumber" class="form-control" placeholder="Enter case number" />
                </div>
                <!-- Is Against IDCOL -->
                <div class="col-md-6 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="IsAgainstIDCOL" class="form-check-input" type="checkbox" id="IsAgainstIDCOL" />
                        <label class="form-check-label" for="IsAgainstIDCOL">
                            Is Against IDCOL
                        </label>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save me-2"></i>Save Entry
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<!--  DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Lawyers List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="masterTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th class="d-none">Litigation ID</th>
                        <th>Project</th>
                        <th>Initial Case No</th>
                        <th>Litigation Type</th>
                        <th>Litigation Cause</th>
                        <th>Litigation Status</th>                
                        <th>Complainant</th>
                        <th>Defendent</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated via AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit Lawyer Modal -->
<div class="modal fade" id="editLawyerModal" tabindex="-1" aria-labelledby="editLawyerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editLawyerModalLabel">
                    <i class="fas fa-edit me-2"></i>Edit Lawyer
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editLawyerForm">
                    <input type="hidden" id="editLawyerId" name="LawyerId">
                    <div class="mb-3">
                        <label for="editLawyerName" class="form-label">Lawyer Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editLawyerName" name="LawyerName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-warning" onclick="updateLawyer()">
                    <i class="fas fa-save me-2"></i>Update Lawyer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Load litigations on page load
            loadLitigations();

            // Prevent selecting same party as complainant & defendant
            const complainantSelect = $("#ComplainantLitigationPartyID");
            const defendantSelect = $("#DefendentLitigationPartyID");

            complainantSelect.on("change", function () {
                if (complainantSelect.val() && complainantSelect.val() === defendantSelect.val()) {
                    alert("Complainant and Defendant cannot be the same.");
                    complainantSelect.val("");
                }
            });

            defendantSelect.on("change", function () {
                if (defendantSelect.val() && complainantSelect.val() === defendantSelect.val()) {
                    alert("Complainant and Defendant cannot be the same.");
                    defendantSelect.val("");
                }
            });
        });

        // Load litigation list from server-side ViewBag
        function loadLitigations() {
            var litigationList = @Html.Raw(Json.Serialize(ViewBag.LitigationList ?? new List<object>()));
            console.log('Loaded', litigationList.length, 'litigations');
            populateLitigationTable(litigationList);
        }

        // Populate litigation table
        function populateLitigationTable(litigationList) {
                console.log('Populating table with', litigationList.length, 'entries');
        var tbody = $('#masterTable tbody');
        tbody.empty();

        if (litigationList.length === 0) {
            tbody.append('<tr><td colspan="7" class="text-center text-muted">No records found</td></tr>');
            return;
        }

        $.each(litigationList, function(index, item) {
            var row = `
                <tr>
                    <td class="d-none">${item.litigationID|| ''}</td>
                    <td>${item.projectName|| ''}</td>
                    <td>${item.initialCaseNumber || ''}</td>
                    <td>${item.litigationTypeName || ''}</td>
                    <td>${item.causeName || ''}</td>
                    <td>${item.litigationStatusName || ''}</td>
                    <td>${item.complainant || ''}</td>
                    <td>${item.defendant || ''}</td>
                    <td class="text-center">
                    <button class="btn btn-sm btn-info"
                            onclick="viewDetails('${item.litigationID}')"
                            title="View Details">
                        <i class="bi bi-eye"></i> Details
                    </button>
                </td>
                </tr>
            `;
            tbody.append(row);
            });

            console.log(litigationList)
            console.log('Table populated successfully');

            // Initialize or reinitialize DataTable
            if ($.fn.DataTable.isDataTable('#masterTable')) {
                $('#masterTable').DataTable().destroy();
            }

            $('#masterTable').DataTable({
                "pageLength": 5,
                "order": [[0, "asc"]],
                "searching": true,
                "lengthChange": false,
                "language": {
                    "emptyTable": "No litigations found"
                }
            });
        }

        // Escape HTML (security)
        function escapeHtml(text) {
            if (!text) return '';
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        function viewDetails(litigationID) {
            if (!litigationID) {
                alert("Invalid record ID.");
                return;
            }

            window.location.href = '@Url.Action("Index", "SAM_Litigation_Details")' + '?id=' + litigationID;
        }

    </script>
}

<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn {
        border-radius: 4px;
    }

    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
</style>