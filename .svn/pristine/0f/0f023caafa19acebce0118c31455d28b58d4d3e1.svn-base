@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext?.User?.Identity?.Name ?? "Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectProcessFlow</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectProcessFlow.styles.css" asp-append-version="true" />

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />




    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-wrap: nowrap;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            flex-shrink: 0;
            transition: transform 0.3s ease-in-out;
        }

            .sidebar .nav-link {
                color: #ccc;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                    color: white;
                }

        /* Hide sidebar on small screens */
        @@media (max-width: 991.98px) {
            .sidebar {
                position: fixed;
                height: 100%;
                transform: translateX(-100%);
                z-index: 1050;
            }

                .sidebar.active {
                    transform: translateX(0);
                }

            .overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
                display: none;
                z-index: 1040;
            }

                .overlay.active {
                    display: block;
                }
        }

        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            background-color: #f8f9fa;
            padding: 0.5rem 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .menu-toggle {
            border: none;
            background: none;
            font-size: 1.5rem;
            color: #343a40;
            display: none;
        }

        @@media (max-width: 991.98px) {
            .menu-toggle {
                display: block;
            }
        }

        .error-title {
            color: #c00;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .error-message {
            font-size: 18px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column p-3" id="sidebar">
        <h4 class="text-white">Menu</h4>
        <ul class="nav nav-pills flex-column mb-auto">

            <!-- Home -->
            <li>
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i> Home
                </a>
            </li>

            <!-- SAM Main Menu -->
            <li>
                <a class="nav-link d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#samSubmenu" role="button" aria-expanded="false" aria-controls="samSubmenu">
                    <span><i class="bi bi-briefcase-fill me-2"></i> SAM</span>
                    <i class="bi bi-caret-down-fill"></i>
                </a>

                <ul class="collapse nav flex-column ms-3" id="samSubmenu">
                    <!-- Entry -->
                    <li>
                        <a class="nav-link d-flex justify-content-between align-items-center"
                           data-bs-toggle="collapse" href="#entrySubmenu" role="button" aria-expanded="false" aria-controls="entrySubmenu">
                            <span><i class="bi bi-folder-plus me-2"></i> Entry</span>
                            <i class="bi bi-caret-down-fill"></i>
                        </a>
                        <ul class="collapse nav flex-column ms-3" id="entrySubmenu">
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Master" asp-action="Index">
                                    <i class="bi bi-database-add me-2"></i> Litigation Entry
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- Setup -->
                    <li>
                        <a class="nav-link d-flex justify-content-between align-items-center"
                           data-bs-toggle="collapse" href="#setupSubmenu" role="button" aria-expanded="false" aria-controls="setupSubmenu">
                            <span><i class="bi bi-gear-fill me-2"></i> Setup</span>
                            <i class="bi bi-caret-down-fill"></i>
                        </a>
                        <ul class="collapse nav flex-column ms-3" id="setupSubmenu">
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Action" asp-action="Index">
                                    <i class="bi bi-files me-2"></i> Litigation Actions
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Court" asp-action="Index">
                                    <i class="bi bi-file-earmark-text me-2"></i> Add Court
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Lawyer" asp-action="Index">
                                    <i class="bi bi-people-fill me-2"></i> Add Lawyer
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Cause" asp-action="Index">
                                    <i class="bi bi-diamond-half me-2"></i> Add Cause
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Type" asp-action="Index">
                                    <i class="bi bi-files me-2"></i> Case Type
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-controller="SAM_Litigation_Party" asp-action="Index">
                                    <i class="bi bi-files me-2"></i> Litigation Party
                                </a>
                            </li>

                        </ul>
                    </li>

                    <!-- Reports -->
                    <li>
                        <a class="nav-link" asp-controller="Reports" asp-action="Index">
                            <i class="bi bi-file-earmark-bar-graph-fill me-2"></i> Reports
                        </a>
                    </li>
                </ul>
            </li>

            <!-- Logout -->
            <li>
                <form method="post" asp-controller="Login" asp-action="Logout">
                    <button type="submit" class="btn btn-link nav-link text-start">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>

    <!-- Overlay for mobile -->
    <div class="overlay" id="overlay"></div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <button class="menu-toggle" id="menuToggle">
                <i class="bi bi-list"></i>
            </button>
            <span class="text-muted ms-auto">Logged in as: <strong>@username</strong></span>
        </div>

        <main class="container-fluid mt-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted mt-auto py-2 px-3">
            <div class="container">
                &copy; 2025 - ProjectProcessFlow
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <!-- jQuery (required for Select2) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        // Mobile menu toggle
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('overlay');
        const toggleButton = document.getElementById('menuToggle');

        toggleButton.addEventListener('click', () => {
            sidebar.classList.toggle('active');
            overlay.classList.toggle('active');
        });

        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>