using Microsoft.EntityFrameworkCore;
using SAMLitigation.Models;
using SAMLitigation.Models.ApplicationDbContext;
using SAMLitigation.Models.ViewModel;

namespace SAMLitigation.Services.ServiceImple
{
    public class LitigationMasterServiceImple : LitigationMasterService
    {
        private readonly SAMDbContext _context;

        public LitigationMasterServiceImple(SAMDbContext context)
        {
            _context = context;
        }

        public bool AddLitigationMaster(SAM_Litigation_Master sAM_Litigation_Master)
        {
            try 
            {
                _context.LitigationMaster.Add(sAM_Litigation_Master);
                int result = _context.SaveChanges();
                return result>0;
            }
            catch 
            {
                throw;
            }
        }


        public List<LitigationMasterViewModel> GetAllEx()
        {
            try
            {
                var litigationMasterList = _context.LitigationMasterViewModel
                    .FromSqlRaw("Exec GetAllExLitigationMaster")
                    .ToList();
                return litigationMasterList;
            } 
            catch
            {
                throw;
            }
        }

        public SAM_Litigation_Master GetByIdForUpdate(decimal Id)
        {
            var litigationMasterList = _context.LitigationMaster
                    .FirstOrDefault(l => l.LitigationID == Id);
            return litigationMasterList;
        }

        public bool UpdateLitigationMaster(SAM_Litigation_Master sAM_Litigation_Master)
        {
            try
            {
                _context.LitigationMaster.Update(sAM_Litigation_Master);
                int result = _context.SaveChanges();
                return result > 0;
            }
            catch
            {
                throw;
            }
        }
    }
}
