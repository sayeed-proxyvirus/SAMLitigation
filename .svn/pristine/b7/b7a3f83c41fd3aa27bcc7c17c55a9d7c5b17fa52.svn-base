@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Type Management";
}

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Type Management</h2>
</div>

<!-- Add Type Card Form -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Add New Type</h5>
    </div>
    <div class="card-body">
        <form id="addTypeForm">
            <div class="row g-3">
                <!-- Type Name -->
                <div class="col-md-8">
                    <label for="TypeName" class="form-label">Type Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="TypeName" name="TypeName" required>
                </div>

                <!-- Form Buttons -->
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-2"></i>Save Type
                    </button>
                    <button type="reset" class="btn btn-secondary">
                        <i class="fas fa-undo me-2"></i>Reset
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Types DataTable Card -->
<div class="card shadow-sm">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Types List</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="typesTable" class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Type Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated via AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Edit Type Modal -->
<div class="modal fade" id="editTypeModal" tabindex="-1" aria-labelledby="editTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="editTypeModalLabel">
                    <i class="fas fa-edit me-2"></i>Edit Type
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editTypeForm">
                    <input type="hidden" id="editTypeId" name="TypeId">
                    <div class="mb-3">
                        <label for="editTypeName" class="form-label">Type Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="editTypeName" name="TypeName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <button type="button" class="btn btn-warning" onclick="updateType()">
                    <i class="fas fa-save me-2"></i>Update Type
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Load types on page load
            loadTypes();

            // Handle add type form submission
            $('#addTypeForm').on('submit', function (e) {
                e.preventDefault();

                var typeName = $('#TypeName').val().trim();

                if (!typeName) {
                    alert('Please enter type name');
                    return;
                }

                $.ajax({
                    url: '@Url.Action("AddType", "SAM_Litigation_Type")',
                    type: 'POST',
                    data: { typeName: typeName },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            $('#addTypeForm')[0].reset();
                            location.reload(); // Reload page to get fresh data
                        } else {
                            alert(response.message || 'Failed to add type');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error adding type:', error);
                        alert('Error adding type: ' + error);
                    }
                });
            });
        });

        // Load types from server
        function loadTypes() {
            var types = @Html.Raw(Json.Serialize(ViewBag.Types));
            console.log('Loaded', types.length, 'types');
            populateTypeTable(types);
        }

        // Populate type table
        function populateTypeTable(types) {
            console.log('Populating table with', types.length, 'types');
            var tbody = $('#typesTable tbody');
            tbody.empty();

            if (types.length === 0) {
                tbody.append('<tr><td colspan="3" class="text-center text-muted">No types found</td></tr>');
                return;
            }

            $.each(types, function(index, type) {
                var row = `
                    <tr>
                        <td>${type.value || 'N/A'}</td>
                        <td>${type.text || 'N/A'}</td>
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="editType('${type.value}', '${escapeHtml(type.text)}')" title="Edit Type">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            console.log('Table populated successfully');

            // Initialize or reinitialize DataTable
            if ($.fn.DataTable.isDataTable('#typesTable')) {
                $('#typesTable').DataTable().destroy();
            }
            $('#typesTable').DataTable({
                "pageLength": 5,
                "order": [[0, "desc"]],
                "searching": false,
                "lengthChange": false,
                "language": {
                    "emptyTable": "No types found"
                }
            });
        }

        // Edit type function - opens modal
        function editType(id, name) {
            $('#editTypeId').val(id);
            $('#editTypeName').val(name);
            $('#editTypeModal').modal('show');
        }

        // Update type function
        function updateType() {
            var typeId = $('#editTypeId').val();
            var typeName = $('#editTypeName').val().trim();

            if (!typeName) {
                alert('Please enter type name');
                return;
            }

            $.ajax({
                url: '@Url.Action("UpdateType", "SAM_Litigation_Type")',
                type: 'POST',
                data: {
                    typeId: typeId,
                    typeName: typeName
                },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        $('#editTypeModal').modal('hide');
                        location.reload(); // Reload page to get fresh data
                    } else {
                        alert(response.message || 'Failed to update type');
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error updating type:', error);
                    alert('Error updating type: ' + error);
                }
            });
        }

        // Helper function to escape HTML and prevent XSS attacks
        function escapeHtml(text) {
            var map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, function(m) { return map[m]; });
        }
    </script>
}
<style>
    .card {
        border: none;
        border-radius: 8px;
    }

    .card-header {
        border-radius: 8px 8px 0 0 !important;
        padding: 1rem 1.5rem;
    }

    .table-responsive {
        border-radius: 4px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
    }

    .btn {
        border-radius: 4px;
    }

    .modal-content {
        border-radius: 8px;
    }

    .modal-header {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }
</style>
